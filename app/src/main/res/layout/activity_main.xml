<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="QUESTION 1"
            android:textSize="36sp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Which brand was the producer of the infamous blue-black/white-gold dress?"
            android:textSize="24sp"/>

        <RadioGroup
            android:id="@+id/Question1RG"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RadioButton
                android:id="@+id/Q1A1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fashion Nova"
                android:textSize="20sp"/>
            <RadioButton
                android:id="@+id/Q1A2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Roman Originals"
                android:textSize="20sp"/>
            <RadioButton
                android:id="@+id/Q1A3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cloak"
                android:textSize="20sp"/>
            <RadioButton
                android:id="@+id/Q1A4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tiffany and Co."
                android:textSize="20sp"/>
        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="QUESTION 2"
            android:textSize="36sp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Which Internet horror characters listed here do NOT have a movie or TV show about them?"
            android:textSize="24sp"/>

        <CheckBox
            android:id="@+id/Q2A1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Jeff the Killer"
            android:textSize="20sp"/>
        <CheckBox
            android:id="@+id/Q2A2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Slender Man"
            android:textSize="20sp"/>
        <CheckBox
            android:id="@+id/Q2A3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="The Rake"
            android:textSize="20sp"/>
        <CheckBox
            android:id="@+id/Q2A4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="The SCP Foundation"
            android:textSize="20sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="QUESTION 3"
            android:textSize="36sp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Finish the sentence: There's vomit on his sweater already, _______."
            android:textSize="24sp"/>

        <EditText
            android:id="@+id/Q3A"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Answer here"
            android:textSize="20sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="QUESTION 4"
            android:textSize="36sp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Translate the following into Japanese: You are already dead."
            android:textSize="24sp"/>

        <EditText
            android:id="@+id/Q4A"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Answer here"
            android:textSize="20sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FINAL QUESTION"
            android:textSize="36sp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Did Pepe deserve to be co-opted by the far right and turned into a hate symbol?"
            android:textSize="24sp"/>

        <RadioGroup
            android:id="@+id/Q5RG"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RadioButton
                android:id="@+id/Q5A1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No"
                android:textSize="20sp"/>
            <RadioButton
                android:id="@+id/Q5A2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Absolutely not"
                android:textSize="20sp"/>
            <RadioButton
                android:id="@+id/Q5A3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Yesn't"
                android:textSize="20sp"/>
            <RadioButton
                android:id="@+id/Q5A4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="He totally did"
                android:textSize="20sp"/>
        </RadioGroup>

        <Button
            android:id="@+id/SubmitButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:textStyle="bold"
            android:onClick="calculateScore"/>

    </LinearLayout>

</ScrollView>